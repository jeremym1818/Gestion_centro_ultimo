<div class="col-md-4 mx-auto mt-5">
    <div class="card text-center">
        <div class="card-header">
            <h3>Adignar Estudiante a Grado</h3>

        </div>
        <div class="card-body">

            <form action="/adm/asig-MG" method="POST">
    

                 <div class="form-group ">
                    <select class="form-select" aria-label="Default select example" name="grado">
                        <option selected> Seleccione El Grado</option>
                        {{#each TotalG}}
                        <option>{{NombreGrado}}</option>
                        {{/each }}
                    </select>
                </div>

                 <div class="form-group ">
                    <select class="form-select" aria-label="Default select example" name="materia">
                        <option selected> Seleccione La Materia Asignar</option>
                        {{#each TotalM}}
                        <option>{{NombreMateria}}</option>
                        {{/each }}
                    </select>
                </div>

                <div class="form-group">
                    <button class="button btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>