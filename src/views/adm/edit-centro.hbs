<div class="col-md-4 mx-auto ">
  <div class="card">
    <div class="card-header">
      <h3>Edit Centro</h3>
    </div>
    <div class="card-body">
      <form action="/adm/edit-centro/{{centro._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="NombreCentro" class="form-control" value="{{centro.NombreCentro}}"/>
        </div>
        <div class="form-group">
          <textarea name="DireccionCentro" class="form-control">{{centro.DireccionCentro}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>