<div class="col-md-4 mx-auto mt-5">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Docente</h3>

        </div>
        <div class="card-body">
       
        <form action="/adm/new-docente" method="POST">
            <div class="form-group">
                <input type="text" name="NombreDocente" class="form-control" placeholder="Nombre Del Docente" autofocus>

            </div>
            <div class="form-group">
                 <input type="text" name="ApellidoDocente" class="form-control" placeholder="Apellido" autofocus>
            </div>

             <div class="form-group">
              <input type="text" name="TelefonoDocente" class="form-control" placeholder="Telefono" autofocus>
            </div>

             <div class="form-group">
                <input type="text" name="CorreoDocente" class="form-control" placeholder="Correo" autofocus>
            </div>

             <div class="form-group">
                <textarea name="DireccionDocente" placeholder="Direccion" class="form-control"></textarea>
            </div>
             <div class="form-group">
                <button class="button btn btn-primary btn-block">
                    Guardar
                </button>
             </div>
        
        </form>
 </div>
    </div>
</div>