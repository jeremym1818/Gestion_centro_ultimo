<div class="col-md-4 mx-auto ">
  <div class="card">
    <div class="card-header">
      <h3>Edit Estudiante</h3>
    </div>
    <div class="card-body">
      <form action="/adm/edit-etudiante/{{estudiante._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="NombreEstudiante" class="form-control" value="{{estudiante.NombreEstudiante}}"/>
        </div>

         <div class="form-group">
          <input type="text" name="ApellidoEstudiante" class="form-control" value="{{estudiante.ApellidoEstudiante}}"/>
        </div>

         <div class="form-group">
          <input type="text" name="TelefonoEstudiante" class="form-control" value="{{estudiante.TelefonoEstudiante}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="CorreoEstudiante" class="form-control" value="{{estudiante.CorreoEstudiante}}"/>
        </div>

         <div class="form-group">
          <input type="text" name="DireccionEstudiante" class="form-control" value="{{estudiante.DireccionEstudiante}}"/>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>